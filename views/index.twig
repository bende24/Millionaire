{% extends "default.twig" %}

{% block content %}
    <h1>index.twig</h1>

    <button id="test-button" class="btn btn-primary">Test</button>

    <div class="container-fluid">
        <h1>Millionaire</h1>
        <div class="row">
            <div class="col-sm-8 left">

                <div id="question-container">
                    <div class="question-body text-center mb-1 pt-2"></div>

                    <button class="btn answer mb-1 mr-4 text-left" data-id="A"><span> A: </span><em></em></button>
                    <button class="btn answer mb-1 mr-4 text-left" data-id="B"><span> B: </span><em></em></button>
                    <button class="btn answer mb-1 mr-4 text-left" data-id="C"><span> C: </span><em></em></button>
                    <button class="btn answer mb-1 mr-4 text-left" data-id="D"><span> D: </span><em></em></button>
                </div>

            </div>
            <div class="col-sm-4 right">
                <div id="helps">
                    <button id="fiftyfifty" class="btn btn-primary mb-4">50/50</button>
                    <button id="phone" class="btn btn-primary mb-4">Phone</button>
                    <button id="audience" class="btn btn-primary mb-4">Audience</button>

                    {% include "prizes.twig" %}
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="correctModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Correct</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Megállsz?</button>
                    <button id="nextQuestion" type="button" class="btn btn-primary">Tovább</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="wrongModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Wrong</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Nyereménye: <span></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}